CREATE TABLE `user` (
    u_code int not null AUTO_INCREMENT UNIQUE,
    u_id varchar(10) not null,
    u_pwd varchar(15) not null,
    u_name varchar(10) not null,
    u_auth ENUM('user','admin'),
    PRIMARY KEY (u_code)
);

